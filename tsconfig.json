{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "esnext"
  },
  "include": [
    "src/**/*.ts" ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*",
    ".idea/**/*"
  ],
  "typeRoots": [
    "typings",
    "node_modules/@types"
  ],
  "ts-node": {
    "files": true
  }
}
